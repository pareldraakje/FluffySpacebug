**
** Event scripts
**

scrp 1 1 36475 1000
* attr: invisible 16 + collide 64 + physics 128 = 208
	attr 208
	perm 10
	elas 0
	fric 100
	accg 0
	aero 0

* set category to weather
	cato 19
* initial velocity
	setv va00 rand -20 20
	divv va00 20.0
	velo va00 0
	tick rand 400 600
	mvsf _p1_ _p2_
*	alph rand 50 100 1
endm

scrp 1 1 36475 9

	tick rand 400 600
	setv va00 sean
	doif rand 0 5 eq 5
		setv va99 rand -20 20
		divv va99 20.0
		velo va99 0
	endi
* Rain
	doif ov00 eq 0
		doif va00 ne 1
			show 1
			doif rand 0 9 eq 9
				doif va00 ne 3
					reps rand 30 50
						targ ownr
						setv va01 posx
						setv va02 posy
						new: simp 2 19 36475 "betaship_cloud" 1 1 3000
						mesg wrt+ targ 1000 va01 va02 1
						wait 50
					repe
				else
					reps rand 8 20
						targ ownr
						doif obst left lt 100
							setv va99 rand 0 20
							divv va99 20.0
							velo va99 0
						endi
						doif obst rght lt 100
							setv va99 rand -20 0
							divv va99 20.0
							velo va99 0
						endi
						setv va01 posx
						setv va02 posy
						new: simp 2 20 36475 "betaship_cloud" 1 2 3000
						mesg wrt+ targ 1000 va01 va02 1
						wait rand 150 300
					repe
				endi
			endi
		else
			show 0
		endi


* snow

	elif ov00 eq 1
		doif va00 ne 1
			show 1
			doif rand 0 5 eq 5
				reps rand 15 30
					targ ownr
					doif obst left lt 100
						setv va99 rand 0 20
						divv va99 20.0
						velo va99 0
					endi
					doif obst rght lt 100
						setv va99 rand -20 0
						divv va99 20.0
						velo va99 0
					endi
					setv va01 posx
					setv va02 posy
					new: simp 2 20 36475 "betaship_cloud" 1 2 3000
					mesg wrt+ targ 1000 va01 va02 1
					wait rand 200 400
				repe

			endi
		else
			show 0
		endi
	endi

